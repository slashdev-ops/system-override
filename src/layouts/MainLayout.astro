---
import '../styles/base.css';
import { ClientRouter } from 'astro:transitions';
import TerminalOverlay from '../components/TerminalOverlay.tsx';
import LidarBackground from '../components/LidarBackground.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="SlashDev Operations" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ClientRouter />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://twoja-domena.vercel.app/" />
        <meta property="og:title" content="SLASHDEV | SYSTEM OVERRIDE" />
        <meta property="og:description" content="DevOps. Electronics. Aerial Data. WejdÅº do terminala." />
        <meta property="og:image" content="/og-image.jpg" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:title" content="SLASHDEV | SYSTEM OVERRIDE" />
        <meta property="twitter:description" content="DevOps. Electronics. Aerial Data." />
        <meta property="twitter:image" content="/og-image.jpg" />
	</head>
	
	<body class="text-white overflow-x-hidden selection:bg-[#00ff9d] selection:text-black" style="background-color: #030303;">
        
        <div transition:persist><TerminalOverlay client:load /></div>
        <div class="bg-grain fixed top-0 left-0 w-full h-full pointer-events-none z-40" transition:persist></div>
        <div transition:persist class="fixed top-0 left-0 w-full h-full -z-10"><LidarBackground /></div>

        <div class="fixed top-0 left-0 w-full p-4 md:p-6 flex justify-between z-50 pointer-events-none text-[#00ff9d] font-mono text-[10px] items-start" transition:persist>
            
            <div class="flex flex-col gap-2 pointer-events-auto items-start">
                <span class="bg-[#00ff9d]/10 px-2 py-1 border border-[#00ff9d]/30 backdrop-blur-md">ID: SLASH_CORE_V5</span>
                
                <button id="btn-terminal-trigger" class="text-left hover:bg-[#00ff9d] hover:text-black transition-colors px-2 py-1 border border-dashed border-[#00ff9d]/50 flex items-center gap-2 group bg-black/50 backdrop-blur-md">
                    <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse group-hover:bg-black"></span>
                    OPEN_TERMINAL [~]
                </button>
            </div>
            
            <div class="text-right flex flex-col gap-2 pointer-events-auto items-end">
                <span class="bg-black/50 backdrop-blur-md px-2 py-0.5 border-l-2 border-[#00ff9d]">STATUS: <span class="text-white">ONLINE</span></span>
                
                <span class="opacity-60 bg-black/30 px-1">LOC: 52.40N 16.92E</span>

                <button id="btn-audio-toggle" class="border border-white/10 px-2 py-1 hover:border-[#00ff9d] hover:text-[#00ff9d] transition-colors bg-black/50 backdrop-blur-md text-gray-500 w-28 text-center mt-1">
                    [ AUDIO: OFF ]
                </button>
            </div>
        </div>

		<slot />

        <script>
            import { playSound, toggleMute } from '../utils/SoundController';

            const audioBtn = document.getElementById('btn-audio-toggle');
            audioBtn?.addEventListener('click', () => {
                const isMuted = toggleMute();
                if (audioBtn) {
                    audioBtn.innerText = isMuted ? '[ AUDIO: OFF ]' : '[ AUDIO: ON ]';
                    audioBtn.classList.toggle('text-gray-500', isMuted);
                    audioBtn.classList.toggle('text-[#00ff9d]', !isMuted);
                    audioBtn.classList.toggle('border-[#00ff9d]', !isMuted);
                    if (!isMuted) playSound('open');
                }
            });

            const terminalBtn = document.getElementById('btn-terminal-trigger');
            terminalBtn?.addEventListener('click', () => {
                playSound('click');
                window.dispatchEvent(new CustomEvent('open-terminal'));
            });

            console.log("%c SLASHDEV_CORE %c v5.2-POLISHED ", "background:#00ff9d; color:black; font-weight:bold; padding:4px;", "background:#111; color:white; padding:4px;");
        </script>
	</body>
</html>